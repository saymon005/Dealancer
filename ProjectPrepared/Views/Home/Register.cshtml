@using ProjectPrepared.Models
@model ProjectPrepared.Models.viewapplicant


@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_FrontLayout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="card o-hidden border-0 shadow-lg my-2">
         
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Create an Account!</h1>
                            </div>
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <form>
                                <div class="form-group row">
                                    @Html.LabelFor(model => model.appName, htmlAttributes: new { @class = "control-label col-md-5" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.appName, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.appName, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group row">
                                    @Html.LabelFor(model => model.appLocation, htmlAttributes: new { @class = "control-label col-md-5" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.appLocation, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.appLocation, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group row">
                                    @Html.LabelFor(model => model.appPhone, htmlAttributes: new { @class = "control-label col-md-5" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.appPhone, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.appPhone, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group row">
                                    @Html.LabelFor(model => model.appEmail, htmlAttributes: new { @class = "control-label col-md-5" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.appEmail, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.appEmail, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group row">
                                    @Html.LabelFor(model => model.appRegDate, htmlAttributes: new { @class = "control-label col-md-5" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.appRegDate, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.appRegDate, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group row">
                                    @Html.LabelFor(model => model.appTypes, htmlAttributes: new { @class = "control-label col-md-5" })
                                    <div class="col-md-10">
                                        @Html.DropDownListFor(m => m.appTypes,
                                       new SelectList(Enum.GetValues(typeof(appTypes))),
                                       "Select User", new { @class = "dropdown px-4" })
                                        @*@Html.EditorFor(model => model.UserType, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.UserType, "", new { @class = "text-danger" })
                                        *@
                                    </div>
                                </div>

                                <div class="form-group row">
                                    @Html.LabelFor(model => model.appPassword, htmlAttributes: new { @class = "control-label col-md-5" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.appPassword, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.appPassword, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <div class="col-md-10">
                                        <input type="submit" value="Create Your Account" class="btn btn-success" />
                                    </div>
                                </div>
                                <div>
                                    @Html.ActionLink("Back To Home Page", "Index", "Home", new { @class = "btn btn-primary" })
                                </div>
                            </form>
                        </div>
        </div>

    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
