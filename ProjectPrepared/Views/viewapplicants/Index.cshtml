@model IEnumerable<ProjectPrepared.Models.viewapplicant>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">View and Customization of Users</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.appName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.appLocation)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.appPhone)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.appEmail)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.appRegDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.appTypes)
                        </th>
                        <th>Action</th>
                    </tr>
                </thead>

                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.appName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.appLocation)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.appPhone)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.appEmail)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.appRegDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.appTypes)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.appID }) |
                                @Html.ActionLink("Details", "Details", new { id = item.appID }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.appID })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
